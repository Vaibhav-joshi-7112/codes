#include <stdio.h>

int main() {
    int n;
    printf("enter the number\n");
    scanf("%d",&n);
        for (int i=1;i<=n;i++){
            for (int j=n-1;j>=i;j--){
                printf(" ");
            }
            for (int j=1;j<=i;j++){
                printf("%d ",j);
            }
            for (int j=i-1;j>=1;j--){
                printf("%d ",j);
            }
            printf("\n");
        }
        for (int i=n;i>=2;i--){
            for (int j=i;j<n+1;j++){
                printf("  ");
            }
            for (int j=1;j<i;j++){
                printf("%d ",j);
            }
            for (int j=i-2;j>=1;j--){
                printf("%d ",j);
            }
            printf("\n");
        }
    return 0;
}
